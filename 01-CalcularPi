#include <iostream>

using namespace std;

int main (){;

int n, i, signo; 
float s, pi; 

cout<<"Ingrese la presiciÃ³n: ";
cin>>n;

s = 0; 
signo = 1; 
i = 1; 
while (i<=n)
{
    s= s+signo*(1/(float) (2*i-1)); 
    signo= -signo;
    i= i+1;
}
pi= 4*s;
cout<<"El valor de pi aproximado es: "<<pi;

return 0; 
}
